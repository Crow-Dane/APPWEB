{# templates/manage/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'ancien étudiant{{ ancien_etudiant.nom }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1>Détails de l'ancien étudiant {{ ancien_etudiant.nom }}</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ ancien_etudiant.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ ancien_etudiant.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ ancien_etudiant.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ ancien_etudiant.tel }}</td>
                        </tr>
                        <tr>
                            <th>Année de sortie</th>
                            <td>{{ ancien_etudiant.anneeSortie ? ancien_etudiant.anneeSortie|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Poste occupé</th>
                            <td>{{ ancien_etudiant.posteOccuper }}</td>
                        </tr>


                        <tr>
                            <th>Filière</th>
                            <td>
                                {% for filiere in ancien_etudiant.Filiere %}
                                    {{ filiere.nom }}
                                {% endfor %}
                            </td>
                    
                        </tr>


                         <tr>
                            <th>Diplôme</th>
                            <td>
                                {% for diplome in ancien_etudiant.diplome %}
                                    {{ diplome.nom }}
                                {% endfor %}
                            </td>
                    
                        </tr>

                         <tr>
                            <th>Contrat</th>
                            <td>{{ ancien_etudiant.contrat ? ancien_etudiant.contrat.typeContrat : '' }}</td>

                    
                        </tr>
                        
                         <tr>
                            <th>Statut</th>
                            <td>{{ ancien_etudiant.statut ? ancien_etudiant.statut.typeStatut : '' }}</td>

                        </tr>


                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="{{ path('app_manage_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_manage_edit', {'id': ancien_etudiant.id}) }}" class="btn btn-primary">Modifier</a>
                </div>

                {{ include('manage/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
