{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
                {# Sidebar inclusion, if necessary #}
                {# {{ include('sidebar.html.twig') }} #}
            </div>
            <div class="col-md-10">
                <h1 class="text-center my-4 mb-4">Détails de l'utilisateur {{ user.nom }}</h1>


                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles|join(', ') }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary mt-3">Modifier</a>
                    <a href="{{ path('app_users_index')}}" class="btn btn-secondary mt-3">Retour à la liste</a>
                    {{ include('users/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
