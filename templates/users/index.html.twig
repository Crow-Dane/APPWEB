{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
                {# Sidebar inclusion, if necessary #}
                {# {{ include('sidebar.html.twig') }} #}
            </div>
            <div class="col-md-10">
                <h1 class="text-center my-4 mb-4">Liste des Utilisateurs</h1>


                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|join(', ') }}</td>
                                <td>
                                    <a href="{{ path('app_users_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                                    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucun utilisateur trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_users_new') }}" class="btn btn-success">Créer un nouvel utilisateur</a>
            </div>
        </div>
    </div>
{% endblock %}
